@page
@model IntroducionRazor.Pages.AlgebraModel
@{
    ViewData["Title"] = "Algebra";
}

<h3>Operaciones algebráicas</h3>
<form method="post">
    <div>
        <label>a:</label>
        <input type="number" step="0.1" asp-for="a" />
    </div>

    <div>
        <label>b:</label>
        <input type="number" step="0.1" asp-for="b" />
    </div>

    <div>
        <label>x:</label>
        <input type="number" step="0.1" asp-for="x" />
    </div>

    <div>
        <label>y:</label>
        <input type="number" step="0.1" asp-for="y" />
    </div>

    <div>
        <label>n:</label>
        <input type="number" step="0.1" asp-for="n" />
    </div>

    <div>
        <input type="submit" value="Calcular" class="btn btn-primary" />
    </div>

    @if (Model.res != 0)
    {
        <div>
            <label>Resultado:</label>
            <input type="number" value="@Model.res" readonly />
        </div>

        <h4>Detalles del cálculo:</h4>
        <h5>Sumatoria de Términos:</h5>
        <ul>
            @foreach (var termino in Model.Sumatoria)
            {
                <li>@termino</li>
            }
        </ul>

        <h5>Factoriales y Coeficientes Binomiales:</h5>
        <ul>
            @foreach (var factorial in Model.Factoriales)
            {
                <li>@factorial</li>
            }
        </ul>
    }
</form>
